              <i class="fa fa-cc-mastercard" style="color:red;"></i>
              <i class="fa fa-cc-discover" style="color:orange;"></i>
            </div>
            <label for="cname">Name on Card</label>
            <input type="text" id="cname" name="cardname" placeholder="Enter Name on Card">
            <label for="ccnum">Card number</label>
            <input type="number" min=100000 max=999999 style="width: 25%;margin-bottom: 20px;padding: 12px;
             border: 1px solid #ccc;border-radius: 3px" id="ccnum" name="cardnumber" placeholder="Enter Last Six Digits">
            <label for="expmonth">Exp Month</label>
            <input type="month" style="width: 25%;margin-bottom: 20px;padding: 12px;
             border: 1px solid #ccc;border-radius: 3px" id="ccnum" name="cardnumber"  id="expmonth" name="expmonth" placeholder="Enter Exp Month">

            <div class="row">
              <div class="col-50">
                <label for="expyear">Exp Year</label>
                <input type="number" style="width: 25%;margin-bottom: 20px;padding: 12px;
             border: 1px solid #ccc;border-radius: 3px" id="ccnum" name="cardnumber"  id="expyear" min=1000 max=9999 name="expyear" placeholder="Enter Exp Year">
              </div>
              <div class="col-50">
                <label for="cvv">CVV</label>
                <input type="number" id="cvv" min=100 max=999 name="cvv" placeholder="Enter cvv">
              </div>
